---
interface Props {
	title: string;
	icon: string;
	date: string;
	color: string;
	url: string;
}

const { title, icon, date, color, url } = Astro.props;
---

<li class={`hover:scale-105 flex-1 bg-opacity-60 p-3 my-2 rounded-md transform ease-in-out duration-200 ${color}`}>
	<a class="p-0" href={url} target="_blank">
		<div class="flex flex-row items-center">
			<img src={icon} alt={`${title} icon`} class="w-20 rounded-md h-20 object-contain" />
			<div class="ml-4 flex flex-col justify-center">
				<h2 class="text-sm sm:text-lg font-bold flex items-center">
					{title}
					<span class="text-sm font-normal ml-4 hidden sm:block">({date})</span>
				</h2>
				<p class="text-sm">
					<slot />
				</p>
			</div>
		</div>
	</a>
</li>